@model CleanArch.Application.DTOs.ProductDTO

@{
    ViewData["Title"] = "Product Details";
}

<h2>@ViewData["Title"]</h2>

<hr />

<form asp-action="Details">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-md-2 control-label">Category @Html.DisplayNameFor(model => model.Name):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Name)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-2 control-label">Category @Html.DisplayNameFor(model => model.Description):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Description)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-2 control-label">Category @Html.DisplayNameFor(model => model.Image):</label>

            @*<div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Name)</strong>
            </div>*@


            <div class="col-sm-10">
                @if (!ViewBag.ImageExist)
                {
                    <img src="~/images/noimage.jpg" class="rounded-circle" height="300" width="300" asp-append-version="true" />
                }
                else
                {
                    <img src="~/images/@Model.Image" class="rounded-circle" height="300" width="300" asp-append-version="true" />
                }
            </div>

        </div>

        <br />

        <div class="form-group">
            <label class="col-md-2 control-label">Category @Html.DisplayNameFor(model => model.Price):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Price)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-2 control-label">Category @Html.DisplayNameFor(model => model.Category):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Category.Name)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary text-white">Edit</a>

                <a asp-action="Index" class="btn btn-info text-white">Back to List</a>
            </div>
        </div>
    </div>
</form>
