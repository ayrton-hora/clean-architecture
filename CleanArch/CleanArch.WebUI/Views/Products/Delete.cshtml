@model CleanArch.Application.DTOs.ProductDTO

@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>

<hr />

<h4>Are you sure you want to delete this product?</h4>

<hr />

<form asp-action="Delete" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-md-2 control-label">Product @Html.DisplayNameFor(model => model.Name):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Name)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-2 control-label">Product @Html.DisplayNameFor(model => model.Description):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Description)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-2 control-label">Product @Html.DisplayNameFor(model => model.Price):</label>

            <div class="col-sm-10">
                <strong>@Html.DisplayFor(model => model.Price)</strong>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" asp-for="Id" />

                <input type="submit" value="Delete" class="btn btn-danger" />

                <a asp-action="Index" class="btn btn-info text-white">Back to List</a>
            </div>
        </div>
    </div>
</form>